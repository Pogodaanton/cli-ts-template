{
  "name": "cli-ts-template",
  "description": "Boilerplate for creating a node.js CLI with TypeScript",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist",
    "lint": "eslint ./src --ext .js,.ts",
    "build": "npm run clean && tsc && chmod +x dist/index.js",
    "myapp": "ts-node ./src/index.ts"
  },
  "bin": {
    "myapp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/node": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}