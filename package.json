{
  "name": "cli-ts-template",
  "description": "Boilerplate for creating a node.js CLI with TypeScript",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist",
    "lint": "eslint ./src --ext .js,.ts",
    "build": "yarn clean && tsc && chmod +x dist/index.js",
    "myapp": "ts-node ./src/index.ts"
  },
  "bin": {
    "myapp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/node": "^14.0.22",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  }
}
